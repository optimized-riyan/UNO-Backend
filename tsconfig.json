{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2022",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "strict": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2015", "ES2022"],
        "outDir": "dist"
    },
    "include": ["src/**/*", "index.d.ts"]
}